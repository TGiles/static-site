--- 
layout: base-layout.njk
pagination:
  data: collections.post
  size: 5 
  reverse: true
  alias: posts 
---

{% include "post-navigation.njk" %}

{% for post in posts %}
  <article>
    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>
    <p>
      {{ post | readingTime }}
      |
      <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable}}</time>
      {{ post | blogJoinTopics }}
    </p>
    <p>
      {% excerpt post %}
    </p>
  </article>
{% endfor %}

